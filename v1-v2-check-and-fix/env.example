# Service Ports
REST_V1_PORT=3002
REST_V2_PORT=3004
REST_EXTERNAL_USER_PORT=3006
PROXY_PORT=8099

# Base Directory (relative to v1-v2-check-and-fix)
PRROXY_BASE=../prroxy

# Service Directories (relative paths, derived from PRROXY_BASE)
# These are typically not changed unless restructuring the project
REST_V1_DIR=${PRROXY_BASE}/rest-v1
REST_V2_DIR=${PRROXY_BASE}/rest-v2
PROXY_DIR=${PRROXY_BASE}/proxy
REST_EXTERNAL_USER_DIR=${PRROXY_BASE}/rest-external-user

# Configuration Files
REST_V1_CONFIG=${REST_V1_DIR}/src/services/userService.ts
REST_V2_CONFIG=${REST_V2_DIR}/internal/domain/user/service.go

# Reporter Binary
REPORTER_BIN=../reporter/reporter

# Build Paths (relative to each service directory)
# For Go services, this is the path to main.go (e.g., ./cmd/server)
# For other services, this indicates the source directory
REPORTER_BUILD_PATH=./cmd/reporter
PROXY_BUILD_PATH=./cmd/proxy
REST_V1_BUILD_PATH=./src
REST_V2_BUILD_PATH=./cmd/server
REST_EXTERNAL_USER_BUILD_PATH=./cmd/server

# Build Commands (for non-Go services that may vary by implementation)
# REST_V1 can be Node.js, Groovy, or other - configure the build command accordingly
# Examples: "npm run build", "gradle build", "mvn package"
REST_V1_BUILD_COMMAND="npm run build"

# Skip Build Flags (set to true to skip building and use existing binaries)
# Useful when build fails but you have a working binary already
SKIP_BUILD_REST_V1=false
SKIP_BUILD_REST_V2=false

# Custom Start Commands (optional, overrides default ./start.sh)
# For services that need custom startup (e.g., Gradle apps)
# Port is passed as PORT environment variable
# REST_V1_START_COMMAND="./gradlew run --console=plain"
# REST_V2_START_COMMAND="./custom-start.sh"

# Working Directories (relative to v1-v2-check-and-fix)
RECORDINGS_DIR=./recordings
REPORTS_DIR=./reports
TMP_DIR=./tmp

# Test Configuration File
# Default test suite configuration
CONFIG_FILE=config.comprehensive.json

# Proxy Mode (record or playback)
PROXY_MODE=playback

# Clean Recordings Flag (true to remove old recordings on start)
CLEAN_RECORDINGS=false
